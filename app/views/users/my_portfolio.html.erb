<h1 class="display-4 text-secondary text-center">My Portfolio</h1>

<div class="row">
    <div class="col-10 mx-auto">
        <div class="mt-3">
            <h3 class="text-monospace text-info">Search Stocks</h3>
            <%= form_tag search_stock_path, remote: true, method: :get do %>
                <div class="form-group">
                    <div class="row m-0">
                        <div class="col-11 p-0">
                            <%= text_field_tag :stock, nil, placeholder: 'Enter stock symbol', autofocus: true, class: 'form-control' %>
                        </div>
                        <div class="col-1 p-0">
                            <%= button_tag data: { :disable_with => "..." }, type: :submit, class: 'btn btn-info' do %>
                                <%= fa_icon 'search' %>
                            <% end %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
        <div id="stock_view">
        </div>
    </div>
</div>

<% if @tracked_stocks %>
    <%= render 'stocks/list' %>
<% end %>