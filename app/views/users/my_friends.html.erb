<h1 class="display-4 text-secondary text-center">Friends List</h1>

<div class="row">
    <div class="col-10 mx-auto">
        <div class="mt-3">
            <h3 class="text-monospace text-info">Search Friends</h3>
            <%= form_tag search_friend_path, remote: true, method: :get do %>
                <div class="form-group">
                    <div class="row m-0">
                        <div class="col-11 p-0">
                            <%= text_field_tag :friend, nil, placeholder: 'Enter name or email', autofocus: true, class: 'form-control' %>
                        </div>
                        <div class="col-1 p-0">
                            <%= button_tag data: { :disable_with => "..." }, type: :submit, class: 'btn btn-info' do %>
                                <%= fa_icon 'search' %>
                            <% end %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
        <div id="friend_view">
        </div>
    </div>
</div>

<% if @friends %>
    <%= render 'friendships/list' %>
<% end %>