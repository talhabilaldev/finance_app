<h3 class="text-center">Friend's Profile</h3>
<div class="row">
    <div class="col-8 mx-auto p-3">
        <div class="card card-body p-0">
            <table class="table mb-2">
                <tbody>
                    <tr>
                        <th class="border-top-0">Name</th>
                        <td class="border-top-0"><%= @user.full_name %></td>
                    </tr>
                    <tr>
                        <th class="table_border_botttom">Email</th>
                        <td class="table_border_botttom"><%= @user.email %></td>
                    </tr>
                </tbody>
            </table>
            <% if !current_user.friends_with?(@user.id) %>
                <%= link_to user_friendships_path(friend: @user.id), { class: 'btn btn-secondary col-auto mx-auto mb-2' , method: :post, title: "Add as friend" } do %>
                    <i class="fa fa-user-plus"></i>
                <% end %>
            <% else %>
                <span class="col-auto mx-auto badge badge-info p-2 mb-2">You are friends</span>
            <% end %>
        </div>
    </div>
</div>
<% if !@tracked_stocks.empty? %>
    <%= render 'stocks/list' %>
<% else %>
    <div class="row">
        <div class="col-auto mx-auto badge badge-secondary p-3">This user is not tracking any stocks.</div>
    </div>
<% end %>