<div class="row">
    <div class="col-8 mx-auto">
        <%= render 'layouts/flashMessages' %>
    </div>
</div>
<div class="card card-body col-lg-6 mb-3 p-0 mx-auto">
    <table class="table mb-2">
        <thead>
            <tr>
                <th class="border-top-0">Name</th>
                <th class="border-top-0">Email</th>
                <th class="border-top-0">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @friends.each do |record| %>
            <tr>
                <td><%= record.full_name %></td>
                <td><%= record.email %></td>
                <td class="text-center">
                <%= link_to user_path(record), { class: 'col-auto btn btn-primary mb-2', title: "View profile" } do %>
                    <i class="fa fa-eye"></i>
                <% end %>
                <% if !current_user.friends_with?(record.id) %>
                    <%= link_to user_friendships_path(friend: record.id), { class: 'col-auto btn btn-secondary mb-2' , method: :post, title: "Add as friend" } do %>
                        <i class="fa fa-user-plus"></i>
                    <% end %>
                <% else %>
                    <span class="col-auto mx-auto badge badge-info p-2 mb-2">You are friends</span>
                <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
