<div class="row">
    <div class="col-10 mx-auto">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Ticker</th>
                <th scope="col">Name</th>
                <th scope="col">Last Price</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @tracked_stocks.each do |record| %>
            <tr>
                <td><%= record.ticker %></td>
                <td><%= record.name %></td>
                <td><%= record.last_price %></td>
                <td class="text-center"><%= link_to '<i class="fa fa-trash"></i>'.html_safe, user_stock_path(record), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    </div>
</div>