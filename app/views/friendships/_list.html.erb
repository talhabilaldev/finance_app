<div class="row">
    <div class="col-12 mx-auto">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @friends.each do |record| %>
            <tr>
                <td><%= record.first_name %></td>
                <td><%= record.last_name %></td>
                <td><%= record.email %></td>
                <td class="text-center">
                    <%= link_to '<i class="fa fa-eye"></i>'.html_safe, user_path(record), class: 'btn btn-sm btn-primary', title: "View profile" %>
                    <%= link_to '<i class="fa fa-remove"></i>'.html_safe, user_friendship_path(record), method: :delete, title: "Remove from friends list", class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    </div>
</div>